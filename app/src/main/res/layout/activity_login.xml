<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#041C32"
    android:visibility="visible"
    tools:context=".login">

    <LinearLayout
        android:layout_width="328dp"
        android:layout_height="402dp"
        android:layout_marginBottom="167dp"
        android:background="#FFFFFF"
        android:orientation="vertical"
        android:paddingStart="30dp"
        android:paddingLeft="10dp"
        android:paddingTop="35dp"
        android:paddingEnd="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="40dp">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:text="LOGIN PAGE"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationX="70dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="USERNAME"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Masukan username "
            android:textColor="#0C2757"
            android:textColorHint="#FA0000" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PASSWORD"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Masukan pasword"
            android:textColor="#0C2757" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="139dp"
            android:layout_height="38dp"
            android:text="Remember Me"
            android:textColor="#DC777777" />

        <Button
            android:id="@+id/button"
            android:layout_width="201dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif"
            android:text="LOGIN"
            android:textSize="16sp"
            app:backgroundTint="#0C2757" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="Forgot Password?"
            android:textColor="#0650AA" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="Create an Account"
            android:textColor="#0650AA" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>